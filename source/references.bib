	journal = {Ecological Indicators},
	author = {Morelli, Federico and Benedetti, Yanina and Šímová, Petra},
	month = jul,
	year = {2018},
	keywords = {Biodiversity, Bird assemblages, Community metric, Landscape heterogeneity, Model performance, Surrogacy},
	pages = {132--141}
}

